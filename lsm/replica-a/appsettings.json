{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http2"
    }
  },

  "LsmTreeStorageConfiguration": {
    "MaxItemsCapacityInMemory": 500,
    "MergingMillisecondsDelay": 1000000,
    "FirstMergingMillisecondsDelay": 1500000,
    "WalPath": "fs/wal"
  },

  "FileServiceConfiguration": {
    "BaseDirectory": "fs",
    "Compressor": "GZipCompressor:Fastest",
    "MaxBytesPerBlock": 100,
    "SegmentsPerMerge": 3
  },

  "NodeConfiguration": {
    "Type": "replica",
    "ReplicaType": "sync",
    "ip": "http://replica-a:80",
    "MasterAddress": "http://master-a:80"
  }
}
